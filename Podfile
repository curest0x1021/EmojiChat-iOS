# Uncomment this line to define a global platform for your project
# platform :ios, '9.0'

target 'GoWhipIt' do
  # Comment this line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for GoWhipIt
  pod 'Firebase'
  pod 'Firebase/Storage'
  pod 'Firebase/Auth'
  pod 'Firebase/Database'
  pod 'CameraManager', '~> 3.0'
  pod "SwiftSpinner"
  pod "Alamofire"
  pod 'SDWebImage', '~> 4.0'
  pod 'SwiftyJSON'

  use_frameworks!
  pod 'FacebookCore'
  pod 'FacebookLogin'
  pod 'FacebookShare'
  pod 'FBSDKShareKit'

  target 'GoWhipItTests' do
    use_frameworks!
    # Pods for testing
    pod 'Firebase'
      pod 'Firebase/Storage'
      pod 'Firebase/Auth'
      pod 'Firebase/Database'
      pod 'GTMOAuth2'
      pod 'CameraManager', '~> 3.0'
      pod "SwiftSpinner"
      pod 'SDWebImage', '~> 4.0'
      pod 'SwiftyJSON'

  end

  target 'GoWhipItUITests' do
    use_frameworks!
    # Pods for testing
    pod 'Firebase'
      pod 'Firebase/Storage'
      pod 'Firebase/Auth'
      pod 'Firebase/Database'
      pod 'GTMOAuth2'
      pod 'CameraManager', '~> 3.0'
      pod "SwiftSpinner"
      pod 'SDWebImage', '~> 4.0'
      pod 'SwiftyJSON'
      
  end

end
